<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="task_value">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="new_task_value" parent="task_value">
        <item name="android:textSize">16sp</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <style name="fragments_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTopTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="lower_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/marginBottomButton</item>
    </style>
</resources>

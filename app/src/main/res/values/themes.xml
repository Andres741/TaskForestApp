<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="normalTextColor">@color/gray</item>
        <item name="android:textColor">?attr/normalTextColor</item>
        <item name="textAccent">@color/black</item>

        <item name="cardBackgroundColor">@color/very_clear_gray</item>
        <item name="selectedCardBackgroundColor">?attr/colorPrimary</item>
        <item name="selectedCardTextColor">@color/very_clear_gray</item>

    </style>

    <style name="Theme.TaskScheduler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TaskScheduler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaskScheduler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskScheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->
        <item name="normalTextColor">@color/clear_gray</item>
        <item name="android:textColor">?attr/normalTextColor</item>
        <item name="textAccent">@color/white</item>

        <item name="cardBackgroundColor">@color/very_dark_gray</item>
        <item name="selectedCardBackgroundColor">?attr/colorPrimary</item>
        <item name="overColorPrimary">@color/very_dark_gray</item>
        <item name="overColorPrimarySoft">@color/dark_gray</item>

    </style>
</resources>
